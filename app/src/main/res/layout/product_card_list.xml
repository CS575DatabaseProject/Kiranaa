<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="fill_parent"
        android:layout_height="380dp"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/category_image"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/cleanernew"
                android:scaleType="fitXY"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_below="@+id/category_image"
                android:padding="10dp">

                <TextView
                    android:id="@+id/product_category_text"
                    android:layout_width="200dp"
                    android:layout_height="60dp"
                    android:layout_marginBottom="10dp"
                    android:textSize="24sp"
                    />

                <TextView
                    android:id="@+id/product_value"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="85dp"
                    android:textSize="20sp"
                   />
                <Button
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentRight="true"
                    android:id="@+id/buttonPlus"
                    android:text="+"
                    android:background="@drawable/button_round"

                    />

                <TextView
                    android:id="@+id/productCount"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/buttonPlus"
                    android:gravity="center"
                    android:text="0"
                    android:textAlignment="center"
                    android:textSize="18sp" />
                <Button
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentRight="true"
                    android:id="@+id/buttonMinus"
                    android:text="-"
                    android:background="@drawable/button_round"
                    android:layout_below="@+id/productCount"
                    />


            </RelativeLayout>


        </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>